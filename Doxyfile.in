#---------------------------------------------------------------------------
# Project
#---------------------------------------------------------------------------
PROJECT_NAME           = "Minesweeper_OpenGL"
OUTPUT_DIRECTORY       = @DOXYGEN_OUTPUT_DIR@
GENERATE_HTML          = YES
GENERATE_LATEX         = NO

#---------------------------------------------------------------------------
# Input
#---------------------------------------------------------------------------
INPUT                  = @DOXYGEN_INPUT_DIR@
FILE_PATTERNS          = *.h *.hpp *.cpp
RECURSIVE              = YES

#---------------------------------------------------------------------------
# Extraction
#---------------------------------------------------------------------------
EXTRACT_ALL             = YES
EXTRACT_PRIVATE         = YES
EXTRACT_STATIC          = YES

#---------------------------------------------------------------------------
# Build
#---------------------------------------------------------------------------
QUIET                  = NO
WARN_IF_UNDOCUMENTED   = YES
WARN_IF_DOC_ERROR      = YES

#---------------------------------------------------------------------------
# Source browsing
#---------------------------------------------------------------------------
SOURCE_BROWSER         = YES
INLINE_SOURCES         = YES

#---------------------------------------------------------------------------
# Preprocessor
#---------------------------------------------------------------------------
ENABLE_PREPROCESSING   = YES
MACRO_EXPANSION        = YES
EXPAND_ONLY_PREDEF     = NO

#---------------------------------------------------------------------------
# Output
#---------------------------------------------------------------------------
HTML_OUTPUT            = html